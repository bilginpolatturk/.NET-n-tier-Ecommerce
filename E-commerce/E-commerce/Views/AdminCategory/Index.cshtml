@model List<EntityLayer.Entities.Category>
@{
    ViewBag.Title = "Index";
}
<a class="btn btn-success" href="/AdminController/Create">Kategori Ekle</a>
<br />
<br />
<table class="table table-bordered">
    <tr>
        <th>Ad</th>
        <th>Açıklama</th>
        <th>Sil</th>
        <th>Güncelle</th>

    </tr>

    @foreach(var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>@Html.ActionLink("Sil","Delete",new { item.Id }, new { @class="btn btn-danger",onclick="return confirm ('Emin Misiniz?')" })</td>
                    <td><a class="btn btn-warning" href="/AdminCategory/Update/@item.Id">Güncelle</a></td>
                </tr>
            }
</table>

